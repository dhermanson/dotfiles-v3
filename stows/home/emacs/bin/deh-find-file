window_to_refocus=$1

result=$(rg --files --hidden --follow --glob "!.git/*" | fzf --layout=reverse --preview 'less {}' ) || exit $?
# result=$(rg --files --no-ignore --hidden --follow --glob "!.git/*" | fzf) || exit $?
file=`pwd`/$result

emacsclient -n -a "" "$file"
xdotool windowfocus $window_to_refocus
