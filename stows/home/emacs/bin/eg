#!/bin/bash

tempfile=$(mktemp ".grep.XXXXXX")
rg --hidden \
  --glob "!.grep.*" \
  --glob "!TAGS" \
  --vimgrep "$@" > $tempfile

rc=$?; if [[ $rc != 0 ]]; then exit $rc; fi
  
                          # (compilation-mode 1))
                          # (find-file \"$tempfile\"))
emacsclient --eval "(progn (kill-matching-buffers \"\\\\.grep\\\\..*\" t t))" 2>&1 > /dev/null

ec $tempfile
