#! /usr/bin/env ruby

# TODO: this script is too slow, learn Golang or something that compiles

require 'tempfile'

file = Tempfile.new('fzf-result-')

system "urxvtc 2> /dev/null -name urxvtfloat -e sh -c 'fzf > #{ file.path }'"

content = File.read file

unless content.nil? or content.empty?
  puts content
end
